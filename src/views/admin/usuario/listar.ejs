<h1>Lista de Usuario</h1>

 <% if (mensaje.length > 0) { %>
    <div class="alert alert-success"><%= mensaje %></div>
<% } %>

<a href="/admin/usuario/nuevo" class="btn btn-success">Nuevo Usuario</a>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>USUARIO</th>
            <th>CORREO</th>
            <th>ESTADO</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        <% datos.forEach(function(usuario){ %>           
          
        <tr>
            <td><%- usuario.id %></td>
            <td><%- usuario.username %></td>
            <td><%- usuario.email %></td>
            <td><%- usuario.estado %></td>
            <td>
                <a href="/admin/usuario/<%-usuario.id%>/editar" class="btn btn-warning">editar</a>
            </td>
        </tr>
        <% }); %>
    </tbody>

</table>